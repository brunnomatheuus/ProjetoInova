{
  "name": "pessoa",
  "plural": "pessoas",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nome": {
      "type": "string",
      "required": true
    },
    "cpf": {
      "type": "string",
      "required": true
    },
    "rg": {
      "type": "string",
      "required": true
    },
    "orgaoEmissor": {
      "type": "string"
    },
    "dataNascimento": {
      "type": "date",
      "required": true
    },
    "escolaridade": {
      "type": "string",
      "required": true
    },
    "curso": {
      "type": "string",
      "required": true
    },
    "estadoCivil": {
      "type": "string",
      "required": true
    },
    "naturalidade": {
      "type": "string",
      "required": true
    },
    "profissao": {
      "type": "string",
      "required": true
    },
    "endereco": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "pessoaFunc": {
      "type": "hasOne",
      "model": "funcionario",
      "polymorphic": "funcionarioPessoa"
    },
    "contato": {
      "type": "embedsOne",
      "model": "contato",
      "property": "contatoPessoal",
      "options": {
        "validate": true,
        "forceId": false
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
